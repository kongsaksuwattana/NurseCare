<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="NurseCare.UserRegister"  
             Title="User Register">  
    <ScrollView >  
    <VerticalStackLayout>  
        <Label   
            Text="Rigistration"  
            VerticalOptions="Center"   
            HorizontalOptions="Center"   
            FontSize="Title"  
            Margin="20"/>  
        <Frame Grid.Row="0" Grid.Column="0"  
           Grid.RowSpan="1"  
           BorderColor="LightGray"  
           CornerRadius="12"  
           HasShadow="True">      
            <VerticalStackLayout Padding="16" Spacing="8">  
                <Grid ColumnDefinitions="*,Auto">  
                    <Label Grid.Column="0" Text="Nurse Registration" FontSize="Medium"/>  
                    <Image Grid.Column="1" Source="nurse_1.png" MaximumHeightRequest="80" HorizontalOptions="End"/>  
                </Grid>  
                <Entry  x:Name="UsernameEntry"  Placeholder="Username"/>  
                    <Grid ColumnDefinitions="*,Auto">  
                    <Entry Grid.Column="0"  x:Name="PasswordEntry"  Placeholder="Password" IsPassword="{Binding IsPasswordHidden}"/>  
                        <ImageButton  
                            Grid.Column="1"
                            x:Name="ViewPassword"                          
                            WidthRequest="30"   
                            HeightRequest="30"   
                            HorizontalOptions="End"   
                            VerticalOptions="Center"                             
                            Command="{Binding TogglePasswordVisibilityCommand}"  
                            />  
                    </Grid>  
                    <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirm Password" Margin="0,0,0,20" IsPassword="{Binding IsPasswordHidden}"/>  
                  
                <Entry x:Name="NurseFirstName" Placeholder="First Name"/>  
                <Entry x:Name="NurseLastName" Placeholder="Last Name"/>  
                <Entry x:Name="NurseNickName" Placeholder="Nick Name"/>  
                <Entry x:Name="NurseEmployeeId" Placeholder="Employee ID"/>  
                <!--<DatePicker x:Name="NurseDateOfHire"/>-->  
                <Entry x:Name="NurseDepartment" Placeholder="Department"/>  
                <Picker x:Name="NurseTeamPicker" Title="Team"/>  
  
                <Label Text="Contact info" FontSize="Subtitle" HorizontalTextAlignment="Start" Margin="0,20,0,0"/>  
                <Entry x:Name="NursePhoneNumber" Placeholder="Phone Number" Keyboard="Telephone"/>  
                <Entry x:Name="NurseEmail" Placeholder="Email" Keyboard="Email"/>  
                <Entry x:Name="NurseAddress1" Placeholder="Address 1"/>  
                <Entry x:Name="NurseAddress2" Placeholder="Address 2"/>  
                <Button Text="Register Nurse" Clicked="OnRegisterNurseClicked"/>  
            </VerticalStackLayout>  
        </Frame>  
    </VerticalStackLayout>  
    </ScrollView>  
</ContentPage>